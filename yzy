// pages/index.js
import { useState } from "react";
import { collection, addDoc } from "firebase/firestore";
import { db } from "../firebase";

export default function Home() {
  const [usuario, setUsuario] = useState("");
  const [mensaje, setMensaje] = useState("");

  const handleSubmit = async (e) => {
    e.preventDefault();
    if (!usuario.startsWith("@")) {
      setMensaje("Escribe tu usuario con @.");
      return;
    }

    try {
      await addDoc(collection(db, "usuariosIG"), {
        usuario,
        timestamp: new Date().toISOString()
      });
      setMensaje("Registrado. Nos vemos pronto.");
      setUsuario("");
    } catch (error) {
      console.error(error);
      setMensaje("Error. Intenta de nuevo.");
    }
  };

  return (
    <div style={{
      height: "100vh",
      background: "black",
      color: "white",
      display: "flex",
      flexDirection: "column",
      justifyContent: "center",
      alignItems: "center",
      fontFamily: "'Courier New', monospace",
      textAlign: "center",
      padding: "2rem"
    }}>
      <h1 style={{ fontSize: "2.5rem", marginBottom: "1rem", letterSpacing: "-1px" }}>
        YZY FEST 2025
      </h1>
      <p style={{ fontSize: "1rem", marginBottom: "2rem", opacity: 0.7 }}>
        deja tu @ paâ€™ avisarte ğŸ‘ï¸
      </p>
      <form onSubmit={handleSubmit} style={{ width: "100%", maxWidth: "400px" }}>
        <input
          type="text"
          value={usuario}
          onChange={(e) => setUsuario(e.target.value)}
          placeholder="@tucuenta"
          required
          style={{
            width: "100%",
            padding: "1rem",
            fontSize: "1rem",
            marginBottom: "1rem",
            background: "white",
            color: "black",
            border: "none",
            outline: "none"
          }}
        />
        <button
          type="submit"
          style={{
            width: "100%",
            padding: "1rem",
            background: "white",
            color: "black",
            fontWeight: "bold",
            border: "none",
            cursor: "pointer"
          }}
        >
          ENVIAR
        </button>
      </form>
      {mensaje && (
        <p style={{ marginTop: "1rem", fontSize: "0.9rem", color: "#0f0" }}>
          {mensaje}
        </p>
      )}
    </div>
  );
}
